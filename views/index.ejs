<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="stylesheets/style.css">
  
  <script src="https://cdn.tailwindcss.com"></script>

</head>
<body >
  <div class=" h-full w-full flex">
    <div class="bg-zinc-800 h-full w-96 flex flex-col items-center pt-10 text-white">
      <!--  -->
      <form action="/create" method="post">

        <input type="text" placeholder="create file" name="filename" class="m-auto px-5 py-1 bg-zinc-700 rounded mb-2"  >

        <%files.forEach(function(file){%>

          <div class="pt-1 flex justify-between">
              <div><a href="/<%=file%>">›  <%=file%></a></div> 
              <div><a href="/delete/<%=file%>" class="text-red-700">⊗</a></div>
          </div> 
          

        <%})%>

      </form>
         
    </div>
    <div class="bg-zinc-700 h-full  w-full ">

      <form action="/update/<%=filename%>" method="post">
        
        <textarea name="filedata" id="" cols="130" rows="19" class="outline-none border-none bg-zinc-700 text-white p-5">
          <%=filedata%>
        </textarea>

        <div class="w-full flex justify-end pt-2 pr-2">
          <button class="bg-sky-500 px-3 py-1 rounded-2xl text-white" >
            save changes
          </button>
        </div>

      </form>

    </div>
  </div>
</body>
</html>
